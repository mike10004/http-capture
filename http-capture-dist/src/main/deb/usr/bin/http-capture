#!/bin/bash

PACKAGE=http-capture
PROG=http-capture
JAVA=${JAVA:-java}
PREFIX=${PREFIX:-/usr/share}

which "${JAVA}" > /dev/null
if [ $? -ne 0 ] ; then
  echo "${PROG}: no ${JAVA} on path" >&2
  exit 2
fi

set -e

MAIN_CLASS="io.github.mike10004.httpcapture.exec.HttpCaptureMain"

"${JAVA}" -classpath "$(cat ${PREFIX}/${PACKAGE}/classpath-arg.txt)" "${MAIN_CLASS}" $@
